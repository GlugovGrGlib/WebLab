    }

  

    #menu ul li {
      text-align: center;
      display: block;
      float: left;
      margin: 0 !important;
      padding: 0;
      position: relative;
      min-width: 100px;
      max-width: 140px;
      height: 50px;
      transition: background-color .15s ease-in-out;
    }

    #menu ul li a {
      width: 100%;
      height: 100%;
      display: table;
      transition: background-color .15s ease-in-out;
    }

    #menu ul li a span {
      line-height: 1em;
      width: 100%;
      padding: 0 20px;
      display: table-cell;
      vertical-align: middle;
    }

    #menu ul li li span {
      width: auto;
      padding: 0;
      display: block;
    }

    #menu ul li:hover {
      background-color: #be630e;
    }

    #menu ul li.current a span:after {
      content: "";
      height: 2px;
      background: #be630e;
      position: absolute;
      right: 0;
      bottom: 0;
      left: 0;
    }

    #menu ul li.current a span.live:after {
      display: none;
    }

    #menu ul li.current:hover a span:after,
    #menu ul li.current li a span:after {
      display: none;
    }


    #menu ul li:before {
      position: absolute;
      content: "";
      width: 1px;
      top: 15%;
      bottom: 15%;
      left: 0;
      background: linear-gradient(to bottom, rgba(120, 120, 120, 0) 0%, rgba(120, 120, 120, 1) 50%, rgba(120, 120, 120, 0) 100%);
    }


